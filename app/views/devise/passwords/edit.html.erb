<% company_settings = Tenant.first&.company_setting %>

<style>
  .password-edit-wrapper {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    overflow: hidden;
  }

  <% if company_settings&.logo&.attached? %>
  .password-edit-wrapper::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    height: 80%;
    background-image: url('<%= url_for(company_settings.logo) %>');
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    opacity: 0.05;
    z-index: 0;
  }
  <% end %>

  .password-edit-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 50px 40px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    width: 100%;
    max-width: 450px;
    position: relative;
    z-index: 1;
  }

  .password-edit-logo {
    text-align: center;
    margin-bottom: 30px;
  }

  .password-edit-logo img {
    max-width: 180px;
    max-height: 80px;
    margin-bottom: 15px;
  }

  .password-edit-logo h2 {
    color: #333;
    font-weight: 700;
    margin: 0;
    font-size: 28px;
  }

  .password-edit-logo p {
    color: #666;
    font-size: 14px;
    margin-top: 5px;
  }

  .password-edit-form .form-label {
    color: #444;
    font-weight: 600;
    margin-bottom: 8px;
    font-size: 14px;
  }

  .password-edit-form .form-control {
    border: 3px solid #FFC107;
    border-radius: 10px;
    padding: 12px 18px;
    font-size: 15px;
    transition: all 0.3s ease;
    background-color: #FFFEF5;
  }

  .password-edit-form .form-control:focus {
    border-color: #FFA000;
    box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    background-color: white;
  }

  .password-edit-form .btn-edit {
    width: 100%;
    padding: 14px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 16px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    color: white;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .password-edit-form .btn-edit:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
  }

  .password-edit-links {
    text-align: center;
    margin-top: 25px;
    padding-top: 25px;
    border-top: 1px solid #e0e0e0;
  }

  .password-edit-links a {
    color: #667eea;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s ease;
  }

  .password-edit-links a:hover {
    color: #764ba2;
    text-decoration: underline;
  }

  .password-hint {
    font-size: 13px;
    color: #888;
    margin-top: 5px;
  }
</style>

<div class="password-edit-wrapper">
  <div class="password-edit-card">
    <div class="password-edit-logo">
      <% if company_settings&.logo&.attached? %>
        <%= image_tag company_settings.logo, alt: company_settings&.company_name || 'CRM 3K' %>
      <% end %>
      <h2>Nova Senha</h2>
      <p>Defina uma nova senha para sua conta</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'password-edit-form', method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, 'Nova Senha', class: 'form-label' %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: '••••••••' %>
        <% if @minimum_password_length %>
          <div class="password-hint">Mínimo <%= @minimum_password_length %> caracteres</div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, 'Confirmar Nova Senha', class: 'form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: '••••••••' %>
      </div>

      <div class="mt-4">
        <%= f.submit "Alterar Senha", class: 'btn btn-edit' %>
      </div>
    <% end %>

    <div class="password-edit-links">
      <%= link_to "← Voltar ao login", new_session_path(resource_name) %>
    </div>
  </div>
</div>
