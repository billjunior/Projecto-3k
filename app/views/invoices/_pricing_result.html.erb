<div class="card">
  <div class="card-header bg-warning text-dark">
    <h5 class="mb-0"><i class="bi bi-currency-exchange"></i> Resultado do Cálculo</h5>
  </div>
  <div class="card-body">
    <% if calculator.total_cost > 0 %>
      <div class="row mb-3">
        <div class="col-6">
          <p class="text-muted mb-1">Custo de Mão de Obra</p>
          <h6><%= number_to_currency(calculator.labor_cost, unit: 'AOA', separator: ',', delimiter: '.') %></h6>
        </div>
        <div class="col-6">
          <p class="text-muted mb-1">Custo de Material</p>
          <h6><%= number_to_currency(calculator.material_cost, unit: 'AOA', separator: ',', delimiter: '.') %></h6>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-6">
          <p class="text-muted mb-1">Preço de Compra</p>
          <h6><%= number_to_currency(calculator.purchase_price, unit: 'AOA', separator: ',', delimiter: '.') %></h6>
        </div>
        <div class="col-6">
          <p class="text-muted mb-1">Margem de Lucro Aplicada</p>
          <h6><%= calculator.profit_margin_percentage %>%</h6>
        </div>
      </div>

      <hr>

      <div class="bg-light p-3 rounded mb-3">
        <p class="text-muted mb-1">Custo Total</p>
        <h4 class="mb-0"><%= number_to_currency(calculator.total_cost, unit: 'AOA', separator: ',', delimiter: '.') %></h4>
      </div>

      <div class="bg-success text-white p-4 rounded mb-3 text-center">
        <p class="mb-1"><i class="bi bi-tag-fill"></i> Preço de Venda Sugerido</p>
        <h1 class="mb-0"><%= number_to_currency(calculator.suggested_price, unit: 'AOA', separator: ',', delimiter: '.') %></h1>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="card bg-info text-white">
            <div class="card-body text-center">
              <p class="mb-1 small">Lucro</p>
              <h5 class="mb-0"><%= number_to_currency(calculator.profit_amount, unit: 'AOA', separator: ',', delimiter: '.') %></h5>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card bg-primary text-white">
            <div class="card-body text-center">
              <p class="mb-1 small">Margem Real</p>
              <h5 class="mb-0"><%= calculator.profit_percentage %>%</h5>
            </div>
          </div>
        </div>
      </div>

      <div class="alert alert-info mt-3 mb-0">
        <i class="bi bi-lightbulb"></i>
        <strong>Dica:</strong> O preço foi arredondado para <%= number_to_currency(calculator.suggested_price, unit: 'AOA', separator: ',', delimiter: '.') %> para facilitar transações no mercado angolano.
      </div>
    <% else %>
      <div class="text-center text-muted py-5">
        <i class="bi bi-calculator fs-1"></i>
        <p class="mt-3 mb-0">Insira os valores de custo para calcular o preço sugerido</p>
      </div>
    <% end %>
  </div>
</div>
