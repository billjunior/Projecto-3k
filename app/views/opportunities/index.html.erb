<div class="container-fluid">
  <div class="row mb-4">
    <div class="col">
      <h1><i class="bi bi-trophy"></i> Oportunidades</h1>
      <div class="row g-3 mt-2">
        <div class="col-md-2"><div class="card text-center"><div class="card-body"><h6>Total</h6><h4><%= @stats[:total] %></h4></div></div></div>
        <div class="col-md-2"><div class="card text-center"><div class="card-body"><h6>Abertas</h6><h4 class="text-primary"><%= @stats[:open] %></h4></div></div></div>
        <div class="col-md-2"><div class="card text-center"><div class="card-body"><h6>Ganhas</h6><h4 class="text-success"><%= @stats[:won] %></h4></div></div></div>
        <div class="col-md-2"><div class="card text-center"><div class="card-body"><h6>Perdidas</h6><h4 class="text-danger"><%= @stats[:lost] %></h4></div></div></div>
        <div class="col-md-4"><div class="card text-center"><div class="card-body"><h6>Valor Ponderado</h6><h4 class="text-warning"><%= number_to_currency(@stats[:weighted_value], unit: "AOA") %></h4></div></div></div>
      </div>
    </div>
    <div class="col-auto">
      <%= link_to kanban_opportunities_path, class: 'btn btn-secondary me-2' do %>
        <i class="bi bi-kanban"></i> Vista Kanban
      <% end %>
      <%= link_to new_opportunity_path, class: 'btn btn-primary' do %>
        <i class="bi bi-plus-circle"></i> Nova Oportunidade
      <% end %>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Título</th>
              <th>Cliente</th>
              <th>Valor</th>
              <th>Prob.</th>
              <th>Fase</th>
              <th>Previsão</th>
              <th>Responsável</th>
              <th class="text-end">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% if @opportunities.any? %>
              <% @opportunities.each do |opp| %>
                <tr>
                  <td><%= link_to opp.title, opp, class: 'text-decoration-none fw-bold' %></td>
                  <td><%= opp.customer.name %></td>
                  <td><%= number_to_currency(opp.value || 0, unit: "AOA") %></td>
                  <td><%= opp.probability %>%</td>
                  <td><span class="badge bg-<%= opp.won? ? 'success' : opp.lost? ? 'danger' : 'primary' %>"><%= opp.stage_display_name %></span></td>
                  <td><%= opp.expected_close_date&.strftime('%d/%m/%Y') %></td>
                  <td><%= opp.assigned_to_user&.name %></td>
                  <td class="text-end">
                    <%= link_to opp, class: 'btn btn-sm btn-outline-primary' do %><i class="bi bi-eye"></i><% end %>
                    <%= link_to edit_opportunity_path(opp), class: 'btn btn-sm btn-outline-secondary' do %><i class="bi bi-pencil"></i><% end %>
                    <%= link_to opp, data: { turbo_method: :delete, turbo_confirm: 'Tem a certeza?' }, class: 'btn btn-sm btn-outline-danger' do %><i class="bi bi-trash"></i><% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr><td colspan="8" class="text-center text-muted py-5"><i class="bi bi-inbox fs-1 d-block mb-3"></i>Nenhuma oportunidade encontrada</td></tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
