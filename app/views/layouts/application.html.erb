<!DOCTYPE html>
<html>
  <head>
    <title><%= user_signed_in? ? tenant_name : 'CRM 3K' %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= tenant_favicon_tag if user_signed_in? %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <script src="https://cdn.jsdelivr.net/npm/@hotwired/turbo@8.0.4/dist/turbo.es2017-esm.min.js" type="module"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" data-turbo-track="reload"></script>
    <style>
      .nav-link.active {
        background-color: #ff6600 !important;
        color: #fff !important;
        border-bottom: 3px solid #ff4400;
        font-weight: bold;
        box-shadow: 0 2px 4px rgba(255, 102, 0, 0.3);
      }
      .nav-link:hover {
        background-color: rgba(255, 102, 0, 0.1);
      }
      .dropdown-item.active {
        background-color: #ff6600 !important;
        color: #fff !important;
        font-weight: bold;
      }
      .dropdown-item:hover {
        background-color: rgba(255, 102, 0, 0.1);
      }

      /* Background watermark */
      .background-watermark {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 50%;
        max-width: 600px;
        opacity: 0.04;
        z-index: -1;
        pointer-events: none;
      }
      .background-watermark img {
        width: 100%;
        height: auto;
      }
    </style>
  </head>

  <body style="background-color: #e3f2fd;">
    <% if user_signed_in? %>
      <!-- Background Watermark -->
      <div class="background-watermark">
        <%= tenant_logo_tag %>
      </div>

      <!-- Navigation Bar -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand d-flex align-items-center" href="<%= root_path %>">
            <%= tenant_logo_tag(style: 'max-height: 40px; margin-right: 10px;') %>
            <span class="fw-bold">CRM 3K</span>
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
              <% if current_user.can_access_crm? %>
                <li class="nav-item">
                  <%= link_to '<i class="bi bi-speedometer2"></i> Painel'.html_safe, dashboard_path, class: "nav-link #{'active' if controller_name == 'dashboard'}" %>
                </li>

                <% if current_user.super_admin? || current_user.admin? || current_user.commercial? || current_user.attendant? %>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle #{'active' if ['leads', 'opportunities'].include?(controller_name)}" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      <i class="bi bi-briefcase"></i> CRM
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to 'Leads', leads_path, class: "dropdown-item #{'active' if controller_name == 'leads'}" %></li>
                      <li><%= link_to 'Oportunidades', opportunities_path, class: "dropdown-item #{'active' if controller_name == 'opportunities'}" %></li>
                    </ul>
                  </li>
                <% end %>

                <% unless current_user.production? %>
                  <li class="nav-item">
                    <%= link_to '<i class="bi bi-people"></i> Clientes'.html_safe, customers_path, class: "nav-link #{'active' if controller_name == 'customers'}" %>
                  </li>
                <% end %>

                <% if current_user.super_admin? || current_user.admin? || current_user.commercial? %>
                  <li class="nav-item">
                    <%= link_to '<i class="bi bi-box"></i> Produtos'.html_safe, products_path, class: "nav-link #{'active' if controller_name == 'products' || controller_name == 'price_rules'}" %>
                  </li>
                <% end %>

                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle #{'active' if ['estimates', 'jobs', 'estimate_items', 'job_items', 'job_files'].include?(controller_name)}" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-printer"></i> Gráfica
                  </a>
                  <ul class="dropdown-menu">
                    <% unless current_user.production? %>
                      <li><%= link_to 'Orçamentos', estimates_path, class: "dropdown-item #{'active' if controller_name == 'estimates'}" %></li>
                    <% end %>
                    <li><%= link_to 'Trabalhos', jobs_path, class: "dropdown-item #{'active' if ['jobs', 'job_items', 'job_files'].include?(controller_name)}" %></li>
                  </ul>
                </li>

                <% unless current_user.production? || current_user.attendant? %>
                  <li class="nav-item">
                    <%= link_to '<i class="bi bi-receipt"></i> Faturas'.html_safe, invoices_path, class: "nav-link #{'active' if ['invoices', 'payments'].include?(controller_name)}" %>
                  </li>
                <% end %>

                <li class="nav-item">
                  <%= link_to '<i class="bi bi-list-check"></i> Tarefas'.html_safe, tasks_path, class: "nav-link #{'active' if controller_name == 'tasks'}" %>
                </li>

                <% if current_user.admin? || current_user.super_admin? %>
                  <li class="nav-item">
                    <%= link_to '<i class="bi bi-graph-up"></i> Relatórios'.html_safe, reports_path, class: "nav-link #{'active' if controller_name == 'reports'}" %>
                  </li>
                <% end %>
              <% end %>

              <% if current_user.can_access_cyber? %>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle #{'active' if ['lan_machines', 'lan_sessions', 'inventory_items', 'inventory_movements', 'daily_revenues', 'training_courses'].include?(controller_name)}" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-pc-display"></i> Cyber Café
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Máquinas', lan_machines_path, class: "dropdown-item #{'active' if controller_name == 'lan_machines'}" %></li>
                    <li><%= link_to 'Sessões', lan_sessions_path, class: "dropdown-item #{'active' if controller_name == 'lan_sessions'}" %></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><%= link_to 'Receitas Diárias', daily_revenues_path, class: "dropdown-item #{'active' if controller_name == 'daily_revenues'}" %></li>
                    <li><%= link_to 'Cursos de Formação', training_courses_path, class: "dropdown-item #{'active' if controller_name == 'training_courses'}" %></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><%= link_to 'Inventário', inventory_items_path, class: "dropdown-item #{'active' if ['inventory_items', 'inventory_movements'].include?(controller_name)}" %></li>
                  </ul>
                </li>
              <% end %>
            </ul>
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="bi bi-person-circle"></i> <%= current_user.email %>
                  <span class="badge bg-primary"><%= current_user.role.capitalize %></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <% if current_user.super_admin? %>
                    <li><%= link_to admin_tenants_path, class: "dropdown-item text-danger fw-bold" do %>
                      <i class="bi bi-shield-fill-check"></i> Admin Panel
                    <% end %></li>
                    <li><hr class="dropdown-divider"></li>
                  <% end %>
                  <li><%= link_to 'Perfil', edit_user_registration_path, class: "dropdown-item" %></li>
                  <% if current_user.admin? || current_user.super_admin? %>
                    <li><%= link_to edit_company_settings_path, class: "dropdown-item" do %>
                      <i class="bi bi-gear"></i> Configurações da Empresa
                    <% end %></li>
                  <% end %>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to 'Sair', destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Flash Messages -->
    <% if notice || alert %>
      <div class="container mt-3">
        <% if notice %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= notice %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>
        <% if alert %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= alert %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Main Content -->
    <div class="<%= user_signed_in? ? 'container-fluid mt-4' : '' %>">
      <%= yield %>
    </div>
  </body>
</html>
