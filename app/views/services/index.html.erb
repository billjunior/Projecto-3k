<div class="container-fluid">
  <div class="row mb-4">
    <div class="col">
      <h1><i class="bi bi-book"></i> Catálogo de Serviços</h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
          <li class="breadcrumb-item active" aria-current="page">Catálogo</li>
        </ol>
      </nav>
    </div>
    <% if current_user.admin? || current_user.super_admin? %>
      <div class="col-auto">
        <%= link_to new_service_path, class: 'btn btn-primary' do %>
          <i class="bi bi-plus-circle"></i> Novo Serviço
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Catalog Table View -->
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0"><i class="bi bi-list-ul"></i> Serviços Disponíveis</h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead>
            <tr>
              <th style="width: 20%;">Categoria</th>
              <th style="width: 25%;">Serviço</th>
              <th style="width: 30%;">Descrição</th>
              <th style="width: 12%;">Tempo Estimado</th>
              <th style="width: 10%;">Disponibilidade</th>
              <% if current_user.admin? || current_user.super_admin? %>
                <th style="width: 3%;" class="text-center">Ações</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @services_by_category.each do |category, services| %>
              <% services.each_with_index do |service, index| %>
                <tr class="<%= 'table-secondary' unless service.active? %>">
                  <% if index == 0 %>
                    <td rowspan="<%= services.count %>" class="align-middle fw-bold" style="background-color: rgba(255, 107, 53, 0.05);">
                      <%= category %>
                    </td>
                  <% end %>
                  <td>
                    <%= service.name %>
                    <% unless service.active? %>
                      <span class="badge bg-secondary ms-2">Inativo</span>
                    <% end %>
                  </td>
                  <td class="text-muted"><%= service.description %></td>
                  <td><%= service.estimated_time %></td>
                  <td>
                    <% if service.availability&.downcase == 'na hora' %>
                      <span class="badge bg-success"><%= service.availability %></span>
                    <% else %>
                      <span class="badge bg-info"><%= service.availability %></span>
                    <% end %>
                  </td>
                  <% if current_user.admin? || current_user.super_admin? %>
                    <td class="text-center">
                      <div class="btn-group btn-group-sm">
                        <%= link_to edit_service_path(service), class: 'btn btn-outline-primary', title: 'Editar' do %>
                          <i class="bi bi-pencil"></i>
                        <% end %>
                        <%= button_to toggle_active_service_path(service), method: :post, class: "btn btn-outline-#{service.active? ? 'warning' : 'success'}", title: service.active? ? 'Desativar' : 'Ativar' do %>
                          <i class="bi bi-<%= service.active? ? 'pause' : 'play' %>-circle"></i>
                        <% end %>
                        <%= button_to service_path(service), method: :delete, data: { confirm: 'Tem certeza que deseja remover este serviço?' }, class: 'btn btn-outline-danger', title: 'Remover' do %>
                          <i class="bi bi-trash"></i>
                        <% end %>
                      </div>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            <% end %>

            <% if @services_by_category.empty? %>
              <tr>
                <td colspan="<%= current_user.admin? || current_user.super_admin? ? '6' : '5' %>" class="text-center text-muted py-5">
                  <i class="bi bi-inbox" style="font-size: 48px;"></i>
                  <p class="mt-3">Nenhum serviço cadastrado no catálogo.</p>
                  <% if current_user.admin? || current_user.super_admin? %>
                    <%= link_to 'Adicionar Primeiro Serviço', new_service_path, class: 'btn btn-primary' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="mt-3 d-flex justify-content-center">
        <%= paginate @services %>
      </div>
    </div>
  </div>

  <!-- Info Card -->
  <div class="row mt-4">
    <div class="col-lg-12">
      <div class="card border-info">
        <div class="card-body">
          <h6 class="card-title"><i class="bi bi-info-circle text-info"></i> Sobre o Catálogo</h6>
          <p class="card-text mb-0">
            Este catálogo apresenta todos os serviços gráficos disponíveis.
            <% if current_user.admin? || current_user.super_admin? %>
              Como administrador, você pode adicionar, editar ou remover serviços conforme necessário.
            <% else %>
              Entre em contato com a equipe comercial para mais informações sobre qualquer serviço.
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
