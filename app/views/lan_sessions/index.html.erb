<div class="container-fluid">
  <div class="row mb-4">
    <div class="col">
      <h1><i class="bi bi-clock-history"></i> Sessões LAN</h1>
    </div>
    <div class="col-auto">
      <%= link_to new_lan_session_path, class: 'btn btn-success' do %>
        <i class="bi bi-play-circle"></i> Nova Sessão
      <% end %>
    </div>
  </div>

  <!-- Active Sessions -->
  <% if @active_sessions.any? %>
    <div class="card mb-4">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-circle-fill"></i> Sessões Ativas (<%= @active_sessions.count %>)</h5>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead>
              <tr>
                <th>Máquina</th>
                <th>Cliente</th>
                <th>Início</th>
                <th>Tempo Decorrido</th>
                <th class="text-end">Valor Atual</th>
                <th>Tipo</th>
                <th class="text-end">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @active_sessions.each do |session| %>
                <tr data-controller="session-timer"
                    data-session-timer-start-time-value="<%= session.start_time.iso8601 %>"
                    data-session-timer-hourly-rate-value="<%= session.lan_machine.hourly_rate %>"
                    data-session-timer-session-id-value="<%= session.id %>"
                    data-session-timer-status-value="<%= session.status %>">
                  <td>
                    <strong><i class="bi bi-pc-display"></i> <%= session.lan_machine.name %></strong>
                  </td>
                  <td><%= session.customer&.name || '<span class="text-muted">Anônimo</span>'.html_safe %></td>
                  <td><%= session.start_time.strftime('%d/%m/%Y %H:%M') %></td>
                  <td>
                    <span class="badge bg-info" data-session-timer-target="elapsedTime">
                      <%= session.formatted_elapsed_time %>
                    </span>
                  </td>
                  <td class="text-end">
                    <strong class="text-success" data-session-timer-target="currentValue">
                      <%= number_to_currency(session.current_value, unit: "AOA", separator: ",", delimiter: ".") %>
                    </strong>
                  </td>
                  <td>
                    <span class="badge bg-secondary"><%= session.billing_type || 'Pós-pago' %></span>
                  </td>
                  <td class="text-end">
                    <%= link_to close_lan_session_path(session), data: { turbo_method: :post, turbo_confirm: 'Fechar sessão?' }, class: 'btn btn-sm btn-danger' do %>
                      <i class="bi bi-stop-circle"></i> Fechar
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Recent Closed Sessions -->
  <div class="card">
    <div class="card-header bg-light">
      <h5 class="mb-0"><i class="bi bi-clock-history"></i> Sessões Recentes</h5>
    </div>
    <div class="card-body p-0">
      <% if @recent_sessions.any? %>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead>
              <tr>
                <th>Máquina</th>
                <th>Cliente</th>
                <th>Início</th>
                <th>Fim</th>
                <th>Duração</th>
                <th class="text-end">Total</th>
              </tr>
            </thead>
            <tbody>
              <% @recent_sessions.each do |session| %>
                <tr>
                  <td><i class="bi bi-pc-display"></i> <%= session.lan_machine.name %></td>
                  <td><%= session.customer&.name || '<span class="text-muted">Anônimo</span>'.html_safe %></td>
                  <td><%= session.start_time.strftime('%d/%m/%Y %H:%M') %></td>
                  <td><%= session.end_time&.strftime('%H:%M') %></td>
                  <td><%= session.total_minutes %> min</td>
                  <td class="text-end"><strong><%= number_to_currency(session.total_value, unit: "AOA") %></strong></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted p-3 mb-0">Nenhuma sessão registrada</p>
      <% end %>
    </div>
  </div>
</div>
