<div class="container-fluid">
  <div class="row mb-4">
    <div class="col">
      <h1><i class="bi bi-list-check"></i> Tarefas</h1>
    </div>
    <div class="col-auto">
      <%= link_to new_task_path, class: 'btn btn-primary' do %>
        <i class="bi bi-plus-circle"></i> Nova Tarefa
      <% end %>
    </div>
  </div>

  <!-- Pending Tasks -->
  <div class="card mb-4">
    <div class="card-header bg-warning">
      <h5 class="mb-0"><i class="bi bi-hourglass-split"></i> Tarefas Pendentes (<%= @pending_tasks.count %>)</h5>
    </div>
    <div class="card-body p-0">
      <% if @pending_tasks.any? %>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead>
              <tr>
                <th>Título</th>
                <th>Descrição</th>
                <th>Atribuída a</th>
                <th>Prazo</th>
                <th class="text-end">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @pending_tasks.each do |task| %>
                <tr class="<%= 'table-danger' if task.due_date && task.due_date < Date.today %>">
                  <td><strong><%= task.title %></strong></td>
                  <td><%= task.description&.truncate(50) %></td>
                  <td>
                    <%= task.assigned_to_user ? task.assigned_to_user.email : '<span class="text-muted">Não atribuída</span>'.html_safe %>
                  </td>
                  <td>
                    <% if task.due_date %>
                      <span class="badge bg-<%= task.due_date < Date.today ? 'danger' : 'info' %>">
                        <%= task.due_date.strftime('%d/%m/%Y') %>
                        <% if task.due_date < Date.today %>
                          <i class="bi bi-exclamation-triangle"></i> Atrasada
                        <% end %>
                      </span>
                    <% else %>
                      <span class="text-muted">Sem prazo</span>
                    <% end %>
                  </td>
                  <td class="text-end">
                    <%= link_to edit_task_path(task), class: 'btn btn-sm btn-outline-secondary' do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= link_to task, data: { turbo_method: :delete, turbo_confirm: 'Tem a certeza?' }, class: 'btn btn-sm btn-outline-danger' do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted p-3 mb-0">Nenhuma tarefa pendente</p>
      <% end %>
    </div>
  </div>

  <!-- Completed Tasks -->
  <div class="card">
    <div class="card-header bg-success text-white">
      <h5 class="mb-0"><i class="bi bi-check-circle"></i> Tarefas Concluídas Recentes</h5>
    </div>
    <div class="card-body p-0">
      <% if @completed_tasks.any? %>
        <div class="table-responsive">
          <table class="table table-sm mb-0">
            <thead>
              <tr>
                <th>Título</th>
                <th>Descrição</th>
                <th>Atribuída a</th>
                <th>Concluída em</th>
              </tr>
            </thead>
            <tbody>
              <% @completed_tasks.each do |task| %>
                <tr>
                  <td><%= task.title %></td>
                  <td><%= task.description&.truncate(50) %></td>
                  <td><%= task.assigned_to_user&.email %></td>
                  <td><%= task.updated_at.strftime('%d/%m/%Y %H:%M') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted p-3 mb-0">Nenhuma tarefa concluída</p>
      <% end %>
    </div>
  </div>
</div>
